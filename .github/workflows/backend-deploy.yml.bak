name: Deploy Backend to Azure Functions

on:
  push:
    branches: [main]
    paths:
      - "backend/**"
      - ".github/workflows/backend-deploy.yml"
  workflow_dispatch:

jobs:
  deploy_backend:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Use Node 20.x
        uses: actions/setup-node@v4
        with:
          node-version: "20.x"

      - name: Install deps & generate Prisma client
        working-directory: backend
        run: |
          npm ci
          npx prisma generate

      # Zip the backend so node_modules is included in the package
      - name: Create deployment zip
        run: |
          cd backend
          zip -r ../backend.zip .

      - name: Deploy to Azure Functions
        uses: Azure/functions-action@v1
        with:
          app-name: equipmentMoveForm # <-- your Function App name
          package: backend.zip
          publish-profile: ${{ secrets.AZURE_FUNCTIONAPP_PUBLISH_PROFILE }}
